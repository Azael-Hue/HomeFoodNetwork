@model HomeFoodNetwork.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <h5>Recipe Name</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecipeName)
        </dd>
        <dt class = "col-sm-2">
            <h5>Description</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            <h5>Ingredients</h5>
        </dt>
        <dd class = "col-sm-10">
            <ul>
                @{
                    var ingredientList = Model.Ingredients
                                        .Split(", ")
                                        .ToList();
                    foreach (string ingredient in ingredientList)
                    {
                        <li>@ingredient.Trim()</li>
                    }
                }
            </ul>
        </dd>
        <dt class = "col-sm-2">
            <h5>Steps</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumSteps)
        </dd>
        <dt class = "col-sm-2">
            <h5>Cook Time</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CookTime)
        </dd>
        <dt class = "col-sm-2">
            <h5>Prep Time</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrepTime)
        </dd>
        <dt class = "col-sm-2">
            <h5>Total Time to cook</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalTime)
        </dd>
        <dt class = "col-sm-2">
            <h5>Serving Size</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServingSize)
        </dd>
        <dt class = "col-sm-2">
            <h5>Difficulty</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Difficulty)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
