@model IEnumerable<RecipeIndexViewModel>

@{
    ViewData["Title"] = "Recipe";
}

@if (Model.Count() == 0)
{
    <h1>No Recipes Found</h1>
    <hr />
    <p>
        <a asp-action="Create">Add a Recipe of your own</a>
    </p>
}

else{
    <h1>Our Latest Recipes</h1>
    <hr />
    <p>
        <a asp-action="Create">Add a Recipe of your own</a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-6 col-lg-6 mb-3">
                <a asp-action="Details" asp-route-id="@item.Id" class="card text-black text-decoration-none">
                    <div class="card-body">

                        <h5 class="card-title">@item.RecipeName</h5>

                        <div class="container">
                            <div class="row">

                                <div class="col">
                                    <!-- Add image here -->
                                    <h5> 
                                        <img src="~/images/HCN_Dev_Images/no-image.1024x1024.png" alt="Image functionality soon to be implemented" class="img-fluid" />
                                    </h5>
                                </div>

                                <div class="col">
                                    <p class="card-text">Created by: @item.User</p>
                                    <p class="card-text">Number of steps: @item.TotalSteps</p>
                                    <p class="card-text">Total Time: @item.TotalTime</p>
                                    <p class="card-text">Serving Size: @item.ServingSize</p>
                                    <p class="card-text">Difficulty: @item.Difficulty</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}